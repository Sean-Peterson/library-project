{% extends 'index.html.twig' %}

{% block header %}
    <a href="/librarians">home</a>
    <a href="/authors">back</a>
{% endblock %}

{% block content %}
    <h2>Edit
        {{author.getFullName}}</h2>
{% endblock %}

{% block controls %}
    <form action="/patch/edit_author/{{author.getId}}" method="post">
        <input name="_method" type="hidden" value="patch">
        <label for="first_name">First Name</label>
        <input type="text" name="first_name" value="{{author.getFirstName}}">

        <label for="last_name">Last Name</label>
        <input type="text" name="last_name" value="{{author.getLastName}}">

        <button type="submit" name="button">Update</button>
    </form>
    <form class="" action="/delete/author/{{author.getId}}" method="post">
        <input name="_method" type="hidden" value="delete">
        <button type="submit" name="button">DELETE</button>

    </form>
    <form action="/post/add_book_to_author/{{author.getId}}" method="post">
        <select name="book">
            {% for book in books %}
                <option value="{{book.getId}}">{{book.getTitle}}</option>
            {% endfor %}
        </select>
        <button type="submit" name="button">Credit book to author</button>
    </form>
{% endblock %}
